# Application Configuration
# Copy this file to .env and customize as needed

# Server Port (default: 3000)
# The port on which the application will run
PORT=3000

# Node Environment (production, development, or test)
NODE_ENV=production

# Cookie Security
# Set to 'true' ONLY if running behind HTTPS (e.g., reverse proxy with SSL)
# Leave as 'false' for HTTP-only deployments (default for Docker)
COOKIE_SECURE=false
